<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfigActivity">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/radio_interlace_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Single Interlace View"/>

        <RadioButton
            android:id="@+id/radio_vr_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Reality View" />

    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug"
        android:layout_marginLeft="24dp"
        android:id="@+id/chk_debug"
        android:layout_marginBottom="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn_interlace_width"
        android:text="Interlace width (pixels): 200"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn_image_height"
        android:text="Image height (pixels): 400"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn_border_offset"
        android:text="Border offset (pixels): 100"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn_parallax"
        android:text="Parallax distance (pixels): 10"/>

    <Button
        android:id="@+id/btnFontFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:text="Font Family"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/btnColor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:color/holo_blue_bright"
        android:text="Color 1"
        android:background="#FF000000"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/btnColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:color/holo_blue_bright"
        android:text="Color 2"
        android:background="#FF0000FF"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/btnColor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:color/holo_blue_bright"
        android:text="Color 3"
        android:background="#FF00FF00"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</LinearLayout>